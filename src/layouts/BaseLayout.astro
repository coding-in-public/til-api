---
import Link from "@ui/Link.astro";

const { title = "Astro TIL" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="grid grid-rows-[auto_1fr_auto] min-h-screen">
    <div class="py-2 border-b">
      <nav class="container flex justify-between items-center">
        <Link href="/">Home</Link>
        <Link href="/add">Add</Link>
      </nav>
    </div>
    <main>
      <div class="container py-4 grid gap-4">
        <slot />
      </div>
    </main>
    <footer class="container grid place-items-center py-2 border-t">
      <small class="text-xs">TIL by Chris Pennington</small>
    </footer>
  </body>
</html>
